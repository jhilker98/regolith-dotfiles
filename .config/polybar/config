[module/playpause]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing
hook-1 = echo ""
; Paused
hook-2 = echo ""
initial = 1
; format-underline = ${colors.blue}
line-size = 1
click-left = "playerctl play-pause"
format-background = ${colors.blue}
format-foreground = ${colors.fg}
format-padding = 1
format-margin = 0

